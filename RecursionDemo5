
//Sum of Digit


public class RecursionDemo5{
    int sum =0;
    int fun(int num){
        if(num==0)
            return sum;
        sum = sum+num%10;
        num = num/10;
        fun(num);
        return sum;
    }
    public static void main(String[]args){
        RecursionDemo5 obj = new RecursionDemo5();
        int ret = obj.fun(1564);

        System.out.println(ret);

    }



}



