
//Sum of Number


public class RecursionDemo4{
    int sum =0;
    int fun(int num){
        if(num==0)
            return 1;
        sum = sum+num;
         fun(--num);      //call itself to function
         return sum;
    }
    public static void main(String[]args){
        RecursionDemo4 obj = new RecursionDemo4();
        int ret = obj.fun(5);

        System.out.println(ret);

    }



}


